{
  "crawler": {
    "root": {
      "origin": "http://tdagat-shop.ru",
      "start": "http://tdagat-shop.ru"
    },
    "menu": {"selector" : ".line-top .bxr-classic_hover_menu >ul>.bxr-bg-hover-flat>a" },
    "pagination": {"selector": ".navigation-pages a:not(.navigation-button)"},
    "item": {"selector": ".bxr-element-name a"}
  },
  "parser": {
    "title": {"selector": "h1", "prop": "Text"},
    "category": {"selector": ".bx-breadcrumb-item a", "prop": "Text", "concatWith": "/"},
    "code": {"selector": ".bxr-article-value", "prop": "Text"}
  }
}
